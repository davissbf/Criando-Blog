<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<body>
  <div class="container">
    <hr>
      <h2>Categorias</h2><br>
      <a class="btn style-btn" href="/admin/categories/new">Criar uma nova categoria</a>
    <hr>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Slug</th>
            <th>Açoes</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach((category) =>{ %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.title %></td>
              <td><%= category.slug %></td>
              <td>
                <a href="/admin/categories/edit/<%= category.id %>" class="btn style-btn2">Editar</a>

                <form class="form-delete" method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                  <input type="hidden" name="id" value="<%= category.id %>">
                  <button class="btn style-btn3">Deletar</button>
                </form>

              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
  </div>
</body>
<%- include('../../partials/footer.ejs') %>
<script>
  function confirmDelete(event, form){
    event.preventDefault();
    let decision = confirm("Você quer deletar esta categoria?");
    if(decision){
      form.submit();
    }
  }
</script>